class Solution {
    public int[] sortedSquares(int[] nums) {
        int n= nums.length;
        int[] array= new int[n];
        int left= 0;
        int right =nums.length-1;

        for(int i = right; i>=0;i--){
            if((Math.abs(nums[left])<Math.abs(nums[right]))){
                array[i]=nums[right]*nums[right];
                right--;
            }else{
                array[i]= nums[left]*nums[left];
                left++;
            }
        }return array;


}
}
