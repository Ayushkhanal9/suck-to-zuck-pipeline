class Solution {
    public boolean containsNearbyDuplicate(int[] nums, int k) {
        int left =0, right =0;

        while (right<nums.length){
            if((right-left ) <= k){

                if (left != right && nums[left]==nums[right]){
                    return true;
                }
                right+=1;

            }else{
                left++;
            }
        }
        return false;

    }
}
